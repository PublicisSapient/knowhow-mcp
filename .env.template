# Environment variables template for Docker deployment
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_PASSWORD=your_secure_db_password

# OpenAI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://int.sapientslingsshot.com/v1
OPENAI_MODEL_NAME=meta-llama/llama-3.3-70b-instruct

# Confluence Configuration
CONFLUENCE_URL=https://your-confluence-instance.atlassian.net
CONFLUENCE_USERNAME=your_email@example.com
CONFLUENCE_API_TOKEN=your_confluence_api_token
CONFLUENCE_SPACE_KEY=YOUR_SPACE_KEY

# Support Email Configuration
SUPPORT_EMAIL_USERNAME=your-email@gmail.com
SUPPORT_EMAIL_PASSWORD=your_gmail_app_password
SUPPORT_EMAIL_TO=support@example.com
SUPPORT_EMAIL_FROM=knowhow-assistant@example.com

# Error Notification Email Configuration
ERROR_EMAIL_ENABLED=true
ERROR_EMAIL_TO=admin@example.com,devops@example.com
ERROR_EMAIL_FROM=knowhow-errors@example.com
APP_ENVIRONMENT=production

# Spring Profile (optional)
SPRING_PROFILES_ACTIVE=prod
